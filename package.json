{
  "name": "justadrop",
  "version": "1.0.0",
  "private": false,
  "engines": {
    "node": "v24.7.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "bun run setup:env && bun run setup:db",
    "setup:env": "node -e \"const fs=require('fs');if(!fs.existsSync('.env'))fs.copyFileSync('.env.example','.env')\"",
    "setup:db": "docker-compose -f docker-compose.dev.yml up -d postgres && node -e \"setTimeout(()=>process.exit(0),3000)\" && bun run db:migrate",
    "dev": "bun run --filter '*' dev",
    "dev:api": "bun --cwd apps/api dev",
    "dev:view": "bun --cwd apps/view dev",
    "dev:dashboard": "bun --cwd apps/dashboard dev",
    "build": "bun run build:packages && bun run build:apps",
    "build:packages": "bun run --filter './packages/*' build",
    "build:apps": "bun run --filter './apps/*' build",
    "build:api": "bun --cwd apps/api build",
    "build:view": "bun --cwd apps/view build",
    "build:dashboard": "bun --cwd apps/dashboard build",
    "db:generate": "bun --cwd packages/db db:generate",
    "db:migrate": "bun --cwd packages/db db:migrate",
    "db:studio": "bun --cwd packages/db db:studio",
    "db:reset": "docker-compose -f docker-compose.dev.yml down -v && bun run setup:db",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "bun run --filter '*' clean",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "bun run format:check && bun run typecheck"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "bun-types": "^1.1.0",
    "prettier": "^3.2.5"
  },
  "trustedDependencies": [
    "@justadrop/db",
    "@justadrop/types"
  ]
}
