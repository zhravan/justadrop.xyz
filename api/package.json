{
  "name": "@justadrop/api",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun run tsc --build",
    "start": "NODE_ENV=production bun dist/index.js",
    "typecheck": "bun run tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:cleanup": "bun src/db/cleanup.ts",
    "test": "bun test",
    "test:e2e": "bun test tests/e2e",
    "test:setup": "bun test tests/e2e/setup.test.ts",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.1.0",
    "@elysiajs/jwt": "^1.1.0",
    "@elysiajs/swagger": "^1.1.0",
    "@infisical/sdk": "^1.0.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@supabase/supabase-js": "^2.95.3",
    "cookie": "^1.1.1",
    "drizzle-orm": "^0.38.0",
    "elysia": "^1.1.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "postgres": "^3.4.4",
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/cookie": "^0.6.0",
    "typescript": "^5.3.3",
    "drizzle-kit": "^0.31.7"
  }
}